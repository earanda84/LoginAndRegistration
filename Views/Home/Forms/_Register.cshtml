@model User


<form asp-action="Register" asp-controller="Home" method="post" class="mx-auto p-5 shadow rounded-5">
    @* Firtname *@
    <div class="row mb-3 gap-2 text-start">
        <div class="col-3">
            <label asp-for="FirstName" class="form-label"></label>
        </div>
        <div class="col">
            <input class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    @* Lastname *@
    <div class="row mb-3 gap-2 text-start">
        <div class="col-3">
            <label asp-for="LastName" class="form-label"></label>
        </div>
        <div class="col">
            <input class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    @* Email *@
    <div class="row mb-3 gap-2 text-start">
        <div class="col-3">
            <label asp-for="Email" class="form-label"></label>
        </div>
        <div class="col">
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    @* Password *@
    <div class="row mb-3 gap-2 text-start">
        <div class="col-3">
            <label asp-for="Password" class="form-label"></label>
        </div>
        <div class="col">
            <input class="form-control" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    @* Confirm Password *@
    <div class="row mb-3 gap-2 text-start">
        <div class="col-3">
            <label asp-for="Confirm" class="form-label"></label>
        </div>
        <div class="col">
            <input class="form-control" asp-for="Confirm">
            <span asp-validation-for="Confirm" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3 gap-2 text-start">
        <div class="col">
            <input type="submit" value="Submit" class="btn btn-primary fw-bolder">
        </div>
    </div>
</form>
